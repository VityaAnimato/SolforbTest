@{
    ViewData["Title"] = $"Order {ViewData["OrderId"]}";
}

<h3>Order Items</h3>

@if (Model != null && Model.Count != 0)
{
    <table class="table table-center">
        <thead class="thead-inverse">
            <tr>
                <th>Id</th>
                <th>OrderId</th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Unit</th>
                <th> </th>
                <th> </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.OrderId</td>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Unit</td>
                <td> <a asp-action="Edit" asp-route-id=@item.Id>Edit</a></td>
                <td> <a asp-action="Delete" asp-route-id=@item.Id>Delete</a></td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center" style="margin-top: 100px;">
        <h4>Данные не найдены.</h4>
    </div>
}

<a  asp-action="Add" asp-route-id=@ViewData["OrderId"]>Add</a>